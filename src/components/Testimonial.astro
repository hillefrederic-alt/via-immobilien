---
/**
 * Testimonial - Customer quote card for testimonials section
 *
 * Displays a customer testimonial with quote, author name, and optional role.
 * Features white background with gold left border accent.
 *
 * @example
 * <Testimonial
 *   quote="Frau Semmel hat uns wahrend des gesamten Verkaufsprozesses..."
 *   author="Familie Muller"
 *   role="Immobilienverkauf"
 * />
 */

interface Props {
  /** The testimonial quote text */
  quote: string;
  /** Author name */
  author: string;
  /** Optional role/context (e.g., "Immobilienverkauf") */
  role?: string;
}

const { quote, author, role } = Astro.props;
---

<blockquote class="testimonial" data-aos="fade-up">
  <p class="testimonial__quote">"{quote}"</p>

  <footer class="testimonial__footer">
    <cite class="testimonial__author">{author}</cite>
    {role && <span class="testimonial__role">{role}</span>}
  </footer>
</blockquote>

<style>
  .testimonial {
    background-color: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-md);
    border-left: 4px solid var(--color-gold);
    box-shadow: 0 2px 8px rgba(20, 35, 51, 0.06);
  }

  .testimonial__quote {
    font-family: var(--font-serif);
    font-size: var(--font-size-lg);
    font-style: italic;
    color: var(--color-text);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-lg);
  }

  .testimonial__footer {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .testimonial__author {
    font-family: var(--font-sans);
    font-style: normal;
    font-weight: var(--font-weight-semibold);
    color: var(--color-navy);
    font-size: var(--font-size-base);
  }

  .testimonial__role {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
</style>
