---
/**
 * BaseLayout - Main page template with Header, Footer, and slot for content
 *
 * All pages should use this layout to ensure:
 * - Consistent header and footer on every page
 * - Proper HTML structure and meta tags
 * - Legal pages always accessible via footer links
 */

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Denise Semmel - Ihre vertrauensvolle Begleitung beim Immobilienverkauf und -vermietung in der Rhein-Main-Region'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>
  </head>
  <body>
    <Header />

    <main class="main" id="main-content">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* Layout structure for sticky footer */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main {
    flex: 1;
    padding-top: 4.5rem; /* Account for fixed header height */
  }
</style>
